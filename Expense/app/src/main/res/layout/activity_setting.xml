<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    //Title bar
    <RelativeLayout
        android:id="@+id/setting_titleBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?attr/colorPrimary"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/setting_back_BTN"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/ic_arrow_back"
            />

    </RelativeLayout>

    <!--Account Section -->
    <RelativeLayout
        android:id="@+id/setting_account_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        android:layout_below="@id/setting_titleBar">

        <TextView
            android:id="@+id/setting_account_bar"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Account"
            android:textColor="#fff"
            android:textSize="25dp"/>

        <RelativeLayout
            android:id="@+id/setting_account_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            android:layout_below="@id/setting_account_bar"
            android:background="#ffd">

            <ImageView
                android:id="@+id/setting_photo_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_account" />

            <Button
                android:id="@+id/setting_account_BTN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_chevron_right" />

            <!-- text part-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/setting_photo_profile"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/setting_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Joe Tribbiani"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/setting_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Email: jtribbiani@friends.com"
                    android:textColor="#999"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Dept: Entertainment"
                    android:textColor="#999"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

    <!-- Setting section -->
    <RelativeLayout
        android:id="@+id/setting_about_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        android:layout_below="@id/setting_setting_section">

        <TextView
            android:id="@+id/setting_about_bar"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="About"
            android:textColor="#fff"
            android:textSize="25dp"/>

        <RelativeLayout
            android:id="@+id/setting_about_aboutapp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/setting_about_bar"
            android:background="#ff0">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/setting_about_contact_us"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/setting_about_aboutapp"
            android:background="#ffd">
        </RelativeLayout>

    </RelativeLayout>

    <!-- About section -->
    <RelativeLayout
        android:id="@+id/setting_setting_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        android:layout_below="@id/setting_account_section">

        <TextView
            android:id="@+id/setting_setting_bar"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Settings"
            android:textColor="#fff"
            android:textSize="25dp"/>

        <RelativeLayout
            android:id="@+id/setting_setting_notificaion"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/setting_setting_bar"
            android:background="#ff0">

            <ImageView
                android:id="@+id/ic_notification"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_notification"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/title_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ic_notification"/>

            <Switch
                android:track="@drawable/switch_track"
                android:thumb="@drawable/switch_thumb"
                android:id="@+id/switchBTN"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                />

            <!--
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/notification_toggleBTN"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                />
                -->

        </RelativeLayout>

        //Currency
        <RelativeLayout
            android:id="@+id/setting_setting_currency"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/setting_setting_notificaion"
            android:background="#ffd">


            <ImageView
                android:id="@+id/ic_currency"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_currency"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/title_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Currency"
                android:textSize="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ic_currency"/>

            <Spinner
                android:id="@+id/currency_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                />

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>