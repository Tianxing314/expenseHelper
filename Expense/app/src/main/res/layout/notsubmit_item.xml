<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants">

    <!-- line layout -->
    <RelativeLayout
        android:id="@+id/rl_i_notsubmit_hold_item"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/layout_border">


        <ImageView
            android:id="@+id/iv_notsubmit_type"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_account_dark" />

        <!--todo change to menu in future updates-->
        <Button
            android:id="@+id/btn_notsubmit_remove"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_delete"
            />

        <!-- text part-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/iv_notsubmit_type"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_notsubmit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="activity name"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_notsubmit_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="$314,159.26"
                android:textColor="#FF0000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_notsubmit_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="2019/07/27"
                android:textColor="#999"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>